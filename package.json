{
  "name": "webmcp-extend",
  "version": "0.1.0",
  "description": "Autopilot WebMCP tools onto any website. Then build it for real.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "webmcp-extend": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "build:extension": "vite build",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "lint": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "webmcp",
    "mcp",
    "chrome-extension",
    "ai-tools",
    "playwright",
    "code-generation",
    "agent"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^13.1.0",
    "playwright": "^1.50.0",
    "webmcp-kit": "^0.1.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.0",
    "@types/chrome": "^0.0.287",
    "@types/node": "^22.13.0",
    "tsup": "^8.4.0",
    "typescript": "^5.7.0",
    "vite": "^6.1.0",
    "vitest": "^3.0.0",
    "zod": "^4.0.0"
  },
  "peerDependencies": {
    "zod": "^4.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
